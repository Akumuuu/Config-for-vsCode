{
  "files.autoSave": "onFocusChange",
  "editor.wordWrap": "on",
  "editor.formatOnSave": true, // форматировать код при сохранении
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.guides.bracketPairs": "active",
  "code-runner.runInTerminal": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
  },
  "liveServer.settings.donotVerifyTags": true,

  "editor.unicodeHighlight.ambiguousCharacters": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.tabSize": 2, // размер таба
  "explorer.compactFolders": false, // компактные папки
  "editor.smoothScrolling": true, // плавный скролл
  "workbench.list.smoothScrolling": true, // плавный скролл
  "terminal.integrated.smoothScrolling": true, // плавный скролл в терминале
  "editor.cursorBlinking": "expand", // мигающей курсор
  "terminal.integrated.cursorBlinking": true, // мигающей курсор
  "editor.glyphMargin": false,
  "editor.linkedEditing": true,
  "editor.padding.top": 15,
  "git.suggestSmartCommit": false,
  "git.autofetch": true,

  // Font
  "editor.fontFamily": "JetBrains Mono NL Medium", // Шрифт
  "editor.fontLigatures": true,

  "editor.accessibilitySupport": "off",
  "editor.minimap.enabled": true,
  "prettier.singleQuote": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 1.7,
  "symbols.hidesExplorerArrows": false,
  "workbench.editor.labelFormat": "short",
  "editor.renderLineHighlight": "gutter",
  "breadcrumbs.enabled": false,
  "workbench.productIconTheme": "fluent-icons",
  "files.associations": {
    "*.tsx": "javascriptreact",
  },
  "javascript.validate.enable": false,
  "workbench.iconTheme": "flow-dawn",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*",
  },
  "vscode-pets.theme": "beach",
  "vscode-pets.petSize": "small",
  "files.eol": "\n",
  "workbench.colorTheme": "Halcyon",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
  ],
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
}
